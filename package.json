{
  "name": "gpt-5",
  "version": "1.0.0",
  "private": true,
  "description": "Brouwerij Klein Zwitserland webshop monorepo",
  "type": "commonjs",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "prepare": "husky",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "web:dev": "npm run dev -w web",
    "web:build": "npm run build -w web",
    "web:lint": "npm run lint -w web",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grvermeulen/gpt-5.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/grvermeulen/gpt-5/issues"
  },
  "homepage": "https://github.com/grvermeulen/gpt-5#readme",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,md,json,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "prisma": "^6.13.0"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0"
  }
}
